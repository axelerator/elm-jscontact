{
    "name": "jscontact",
    "version": "1.0.0",
    "description": "A type and conversion utils for JSContact cards (RFC 9553)",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "format": "elm-format --yes src tests/Tests.elm",
        "test:docs": "elm make --docs=docs.json && rm docs.json",
        "test:format": "elm-format --validate src tests/Tests.elm",
        "test": "npx elm-review && elm-test-rs && npm run test:format && npm run test:docs",
        "postinstall": "elm-tooling install"
    },
    "devDependencies": {
        "elm-doc-preview": "^1.0.7",
        "elm-review": "^2.11.2",
        "elm-tooling": "^1.15.1"
    }
}
